@model IEnumerable<ProyectoMVC.Models.Maestros>

@{
    ViewBag.Title = "Index";
}

<h2>Maestros</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@foreach (var item in Model)
{

    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
        <div class="hpanel hblue contact-panel contact-panel-cs responsive-mg-b-30">
            <div class="panel-body custom-panel-jw">
                <div class="social-media-in">
                    <a href="#">  @Html.DisplayFor(modelItem => item.Edad)</a>
                    <a href="#">
                        @{if (item.Sexo == true)
                            {
                                <h4>H</h4>
                            }
                            else
                            {
                                <h4>M</h4>
                            }
                        }
                        }
                    </a>
                </div>
                <img alt="logo" class="img-circle m-b" style="width:200px; height:200px;" src="@Html.DisplayFor(modelItem => item.Foto_Url)">
                <h3>
                    <a href="">
                        @Html.DisplayFor(modelItem => item.Nombre)
                        @Html.DisplayFor(modelItem => item.ApePat)
                        @Html.DisplayFor(modelItem => item.ApeMat)
                    </a>
                </h3>
                <p class="all-pro-ad">@Html.DisplayFor(modelItem => item.Direccion) </p>
                <p>
                    @Html.DisplayFor(modelItem => item.Matricula)  @Html.DisplayFor(modelItem => item.Curp)

                </p>
                <p>

                    @Html.DisplayFor(modelItem => item.Materias.Nombre)
                    @Html.DisplayFor(modelItem => item.Activo)
                </p>
            </div>
            <div class="panel-footer contact-footer">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_Maestro , @class="miclase" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_Maestro, @class = "miclase" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_Maestro, @class = "miclase" })
                
            </div>
        </div>
    </div>
}

